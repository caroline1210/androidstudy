<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_collect_content"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ceshi" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_margin="5dp"
        android:layout_weight="1.0" >

        <TextView
            android:id="@+id/tv_collect_winedese"
            style="@style/size_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/person_feedback_thanks" />

        <TextView
            android:id="@+id/tv_collect_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_collect_winedese"
            android:layout_marginTop="10dp"
            android:text="@string/Workmanship"
            android:textColor="@android:color/holo_red_light"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_collect_marketprice"
            style="@style/size_12_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="市场价:120" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_collect_drop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/drop"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_collect_straw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="@drawable/straw"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_collect_present"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="@drawable/present"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_margin="5dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_collect_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/location" />

            <TextView
                android:id="@+id/tv_collect_location"
                style="@style/size_16_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="5.0km" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/iv_collect_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="468"
                android:textColor="@android:color/holo_red_light"
                android:textSize="20dp" />

            <TextView
                style="@style/size_16_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="@string/price" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>