<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <include
        android:id="@+id/pwd_view"
        layout="@layout/head_layout" />

    <TextView
        style="@style/size_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/person_pwd" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >


            <EditText
                android:id="@+id/et_pwd"
                style="@style/size_16"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/edit_bg_black"
                android:hint=""
                android:paddingLeft="3dp"
                android:password="true"
                android:singleLine="true"
                android:maxLength="12"
                android:textCursorDrawable="@null"
                android:textSize="20dp" />

    </LinearLayout>

    <!-- ******************************** -->

    <TextView
        style="@style/size_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/person_newpwd" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >


            <EditText
                android:id="@+id/et_newpwd"
                style="@style/size_16"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/edit_bg_black"
                android:hint=""
                android:paddingLeft="3dp"
                android:password="true"
                android:singleLine="true"
                android:maxLength="12"
                android:textCursorDrawable="@null"
                android:textSize="20dp" />

    </LinearLayout>

    <!-- *********************************** -->

    <TextView
        style="@style/size_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/person_surepwd" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >


            <EditText
                android:id="@+id/et_surepwd"
                style="@style/size_16"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/edit_bg_black"
                android:hint=""
                android:paddingLeft="3dp"
                android:password="true"
                android:singleLine="true"
                android:maxLength="12"
                android:textCursorDrawable="@null"
                android:textSize="20dp" />

    </LinearLayout>

    <TextView
        style="@style/size_14"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/person_pwd_reminder" />

    <Button
        android:id="@+id/b_change_pwd_confirm"
        style="@style/gwc_all_money_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/click_confirm_bg"
        android:paddingBottom="10dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="10dp"
        android:text="@string/confirm" />

</LinearLayout>