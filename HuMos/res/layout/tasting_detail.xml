<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray005"
    android:orientation="vertical" >

    <include
        android:id="@+id/view"
        layout="@layout/head_layout1" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" >

                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="59dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/content"
                        style="@style/size_18"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="【北京】初夏赏夏布利（chablis）特级园"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/createTime"
                        style="@style/size_12"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:paddingBottom="10dp"
                        android:text="发布 ：2014年7月23日  14:37"
                        android:textColor="@color/gray006" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            style="@style/size_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:text="举  办  方："
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/user"
                            style="@style/size_14"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:text="红樽坊" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp" >

                        <TextView
                            style="@style/size_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:text="品酒时间："
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/time"
                            style="@style/size_14"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:text="2014年7月28日   19点到22点"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp" >

                        <TextView
                            style="@style/size_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:text="联系方式："
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/phoneNum"
                            style="@style/size_14"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:text="15901023526"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp" >

                        <TextView
                            style="@style/size_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:text="活动费用："
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/price"
                            style="@style/size_14"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:text="295元/位"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp" >

                        <TextView
                            style="@style/size_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:text="活动地址："
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/address"
                            style="@style/size_14"
