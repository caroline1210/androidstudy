<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <include
        android:id="@+id/cancel_view"
        layout="@layout/head_layout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textColor="#3ba5ff"
        android:textSize="24dp"
        android:text="@string/person_cancer_cause" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="20dp"
        android:textColor="#8f8f8f"
        android:textSize="20dp"
        android:text="@string/person_your_feedback" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#cccccc" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#cccccc" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <CheckBox
                    android:id="@+id/cb_order"
                    style="@style/size_22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_toLeftOf="@+id/tv_center"
                    android:text="@string/person_repeat_order" />

                <TextView
                    android:id="@+id/tv_center"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <CheckBox
                    android:id="@+id/cb_error"
                    style="@style/size_22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_center"
                    android:text="@string/person_error_order" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <CheckBox
                    android:id="@+id/cb_speed"
                    style="@style/size_22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_toLeftOf="@+id/tv_center_one"
                    android:text="@string/person_slow_speed" />

                <TextView
                    android:id="@+id/tv_center_one"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <CheckBox
                    android:id="@+id/cb_other"
                    style="@style/size_22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_center_one"
                    android:text="@string/person_other_one" />
            </RelativeLayout>

            <EditText
                android:id="@+id/et_cancel_order_cause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="top"
                android:hint="@string/person_cancel_order_hint"
                android:minEms="10"
                android:minLines="3" />
        </LinearLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#cccccc" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#cccccc" />

    <Button
        android:id="@+id/b_cancel_order"
        style="@style/gwc_all_money_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/click_cancel_bg"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="@string/person_cancel_order" />

</LinearLayout>