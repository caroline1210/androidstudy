<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <include
        android:id="@+id/order_details_view"
        layout="@layout/head_layout" />
    <!-- 历史订单详情 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rectangle_shade"
        android:orientation="vertical" >
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
            style="@style/size_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="订单编号：" />
            <TextView
            android:id="@+id/tv_person_title_number"
            style="@style/size_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" />
        </LinearLayout>

        

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray002" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="130dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_person_title_content"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_person_title_winedese"
                    style="@style/size_16"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/tv_person_title_time"
                    style="@style/size_14"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_person_title_num"
                        style="@style/size_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp" />

                    <TextView
                        android:id="@+id/tv_person_title_price"
                        style="@style/size_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_person_title_address"
            style="@style/size_14"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/tv_person_title_merchant"
            style="@style/size_14"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="配送商家：一个啤酒屋" />

        <TextView
            android:id="@+id/tv_person_title_orderstate"
            style="@style/size_14"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp" />
    </LinearLayout>

</LinearLayout>