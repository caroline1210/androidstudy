<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="130dp"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_pushing_content"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/tv_winedese"
            style="@style/size_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:paddingRight="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:gravity="center_vertical|left" >

            <TextView
                android:id="@+id/tv_pushing_price"
                style="@style/size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:padding="3dp"
                android:text="121元"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/tv_pushing_num"
                style="@style/size_16"
                android:layout_width="85dp"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                android:text="数量：2" />
        </LinearLayout>

        <TextView
            android:id="@+id/iv_pushing_time"
            style="@style/size_14"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:layout_gravity="left|bottom"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:text="05:00" />

        <Button
            android:id="@+id/b_cancel_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10dp"
            android:background="@drawable/click_call_service"
            android:paddingBottom="7dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="7dp"
            android:text="@string/person_cancel_order"
            android:textColor="@color/white" />
    </FrameLayout>

</FrameLayout>