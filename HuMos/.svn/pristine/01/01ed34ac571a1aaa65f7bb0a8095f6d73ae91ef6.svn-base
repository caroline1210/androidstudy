<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        style="@style/size_18_gray006"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="选择区域" />

    <View style="@style/line" />

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <TextView
            style="@style/size_16_gray003"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="省份 : " />

        <TextView
            android:id="@+id/area_omit"
            style="@style/size_16_gray003"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_bg_black"
            android:gravity="center_vertical"
            android:paddingLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <TextView
            style="@style/size_16_gray003"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="城市 : " />

        <TextView
            android:id="@+id/area_city"
            style="@style/size_16_gray003"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_bg_black"
            android:gravity="center_vertical"
            android:paddingLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center" >

        <TextView
            style="@style/size_16_gray003"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="区域 : " />

        <TextView
            android:id="@+id/area_country"
            style="@style/size_16_gray003"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_bg_black"
            android:gravity="center_vertical"
            android:paddingLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/area_sure"
            style="@style/size_16_white"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/buy_btn"
            android:text="确定" />

        <Button
            android:id="@+id/area_cancel"
            style="@style/size_16_white"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/walk_bg"
            android:text="取消" />
    </LinearLayout>

</LinearLayout>