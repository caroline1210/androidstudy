<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <include
        android:id="@+id/setting_view"
        layout="@layout/head_layout" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/size_16"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="@string/person_account" />

            <ListView
                android:id="@+id/lv_user_setting"
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:dividerHeight="-2dp"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none" >
            </ListView>

            <TextView
                style="@style/size_16"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="@string/person_setting" />

            <ListView
                android:id="@+id/lv_setting"
                android:layout_width="fill_parent"
                android:layout_height="135dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:dividerHeight="-2dp"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none" >
            </ListView>

            <TextView
                style="@style/size_16"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="@string/person_other" />

            <ListView
                android:id="@+id/lv_setting_other"
                android:layout_width="fill_parent"
                android:layout_height="135dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:dividerHeight="-2dp"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none" >
            </ListView>

            <Button
                android:id="@+id/b_setting_exit"
                style="@style/gwc_all_money_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:background="@drawable/click_exit_bg"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:paddingTop="10dp"
                android:text="@string/exit" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>